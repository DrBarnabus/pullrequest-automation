{
  "name": "@drbarnabus/pullrequest-automation",
  "version": "next",
  "description": "A GitHub Action to automate a number of common pull request tasks in a GitHub Repository.",
  "main": "lib/main.js",
  "scripts": {
    "prebuild": "rm -rf dist && rm -rf lib",
    "build": "tsc && npm run test:ci && ncc build lib/main.js",
    "prepare": "husky install",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DrBarnabus/github-pullrequest-automation.git"
  },
  "keywords": [
    "GitHub Actions",
    "GitHub",
    "Actions",
    "Pull Request",
    "Pull",
    "Request",
    "Automation",
    "Labeller",
    "Approval",
    "Approval Labeller"
  ],
  "author": "DrBarnabus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DrBarnabus/pullrequest-automation/issues"
  },
  "homepage": "https://github.com/DrBarnabus/pullrequest-automation#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@octokit/auth-app": "^4.0.9",
    "@octokit/core": "^4.2.0",
    "@octokit/plugin-paginate-rest": "^6.0.0",
    "@octokit/plugin-rest-endpoint-methods": "^7.0.1",
    "lodash": "^4.17.21",
    "yaml": "^2.2.1",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@octokit/types": "^9.0.0",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.13.0",
    "@vercel/ncc": "^0.36.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
